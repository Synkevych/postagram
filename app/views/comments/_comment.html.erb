  <div class="card mb-3">
    <div class="card-header"> <b> @<%= comment.commenter %>
      </b>
      <%= comment.created_at.strftime("%H:%M  %m.%d.%Y ") %>
    </div>
    <div class="card-body">

      <div class="card-text border-success">
        <%= comment.body %>
      </div>
      <br />
      <% if comment.commenter == User.find(current_user.id).username || User.find(current_user.id).role == 'admin' then %>
      <%= link_to 'Remove', [comment.article, comment],
               method: :delete,
               data: { confirm: 'Are you sure?' },
               class: "btn btn-danger card-link" %>
      <% end %>
    </div>
  </div>