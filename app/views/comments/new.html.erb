<div class="container h-100">
  <div class="col-md-7 mx-auto">
    <div class="border border-info rounded p-5">

      <h2>Add a comment:</h2>
      <%= form_with(model: [@commentable, @comment], local: true) do |form| %>

        <%= render 'layouts/errors', model: @comment , model_str: 'comment' %>
        <%= hidden_field_tag "article_id", @article.id %>
        <%= form.hidden_field :user_id %>

        <div class="form-group">
          <%= form.text_area :body, class: "form-control", placeholder: "Write something..." %>
        </div>

        <div class="form-group">
          <%= form.submit 'Add the comment', class: "btn btn-info"%>
        </div>
      <% end %>
    </div>
  </div>

  