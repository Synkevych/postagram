<div class="col">
  <div class="card bg-light mb-3"" style=" min-width: 22rem;">

    <div class="card-header bg-white">
      <b>Reset Password</b>
    </div><br />
    <%= form_with(model: @user, url: password_reset_path(params[:id]), local: true) do |f| %>

    <%= hidden_field_tag :email, @user.email %>

    <%= f.label :password %><br />
    <%= f.password_field :password, params[:email] %><br />

    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, params[:email] %><br />

    <%= f.submit "Reset password" %>
    <% end %>
  </div>
</div>