<tr id="article_<%= article.id %>">
  <th scope="row">
    <%= article.id %>
  </th>
  <td>
    <b>
      <%= link_to article.title, article_path(article) %>
    </b>
  </td>
  <td>
    <%= link_to article.text, article_path(article) %>
  </td>
  <td>
  <span id="published-at">
    <%= time_ago_in_words(article.updated_at)%>
    </span>
  </td>
  <% user_id ||= current_user.id; if article.user_id == user_id then %>
  <td>
    <%= link_to 'Edit', edit_article_path(article),
      remote: true,
       class: "btn btn-info" %>
  </td>
  <td>
    <%= link_to '&times;'.html_safe, article_path(article),
          method: :delete,
          data: { confirm: 'Are you sure?'},
          remote: true,
          class: "btn delete" %>
    <%= link_to 'Update time', publish_article_path(article),
      method: :patch,
      remote: true,
      data: { disable_with: "Publishing..."},
      class: "btn btn-info" %>
  </td>
  <% else %>
  <td></td>
  <td></td>
  <% end %>
</tr>