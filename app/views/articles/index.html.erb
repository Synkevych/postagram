<table class="table">
  <td><%= link_to 'New Article', new_article_path, class: "btn btn-success"%></td>
  <tr>
    <th scope="col">#</th>
    <th scope="col">Title</th>
    <th scope="col">Text</th>
    <th scope="col" colspan="2"></th>
  </tr>

  <% @articles.sort.each do |article| %>
  <tr>
    <th scope="row"><%= article.id %></th>
    <td><%= article.title %></td>
    <td><%= article.text %></td>
    <td><%= link_to 'Edit', edit_article_path(article), class: "btn btn-secondary"%></td>
    <td><%= link_to 'Show', article_path(article), class: "btn btn-info" %></td>
    <td><%= link_to 'x', article_path(article),
   method: :delete,
   data: { confirm: 'Are you sure?'},
   class: "btn btn-danger" %></td>
  </tr>
  <% end %>
</table>