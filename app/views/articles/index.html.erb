<table class="table">
  <td><%= link_to 'New Article', new_article_path, class: "btn btn-success"%></td>
  <tr>
    <th scope="col">#</th>
    <th scope="col">Title</th>
    <th scope="col">Text</th>
    <th scope="col" colspan="2"></th>
  </tr>

  <% @articles.each_with_index do |article, index| %>
  <tr>
    <th scope="row"><%= index + 1 %></th>
    <td><%= article.title %></td>
    <td><%= article.text %></td>
    <td><%= link_to 'Edit', edit_article_path(article), class: "btn btn-secondary"%></td>
    <td><%= link_to 'Show', article_path(article), class: "btn btn-info" %></td>
  </tr>
  <% end %>
</table>