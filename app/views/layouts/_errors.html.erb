<% if model.errors.any? %>
<div class="alert alert-info" role="alert">
  <div id="error_explanation">
    <h4 class="alert-heading">
      <%= pluralize(model.errors.count, "error") %> prohibited
      this <%= model_str %> from being saved:
    </h4>
    <ul>
      <% model.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
</div>
<% end %>