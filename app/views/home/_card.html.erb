    <% Article.find_each.reverse_each do |article| %>
    <div class="col">
      <div class="card bg-light mt-3" style=" min-width: 22rem;">

        <div class="card-header"> <b>
            <%= article.title %>
          </b>
        </div>

        <div class="card-body">
          <% if !article.image.nil? then %>
          <div class="card-img mb-2">
            <%= image_tag article.image, class: 'rounded img-fluid' %>
          </div>
          <% end %>
          <p class="card-text">
            <%= article.text %>
          </p>
          <p>

          </p>
        </div>
        <div class="card-footer text-muted">
          <% user = User.find(article.user_id); if !user.avatar.nil? %>
          <%= image_tag user.avatar, alt: 'avatar', class:'avatar'%>
          <%end %>
          <b>
            @<%= User.find(article.user_id).username %>
          </b>
          <%= time_ago_in_words(article.created_at) %>
        </div>
      </div>

      <div class="card">
        <div class="card-header bg-info">
          <%= link_to 'Show more', 'articles/' + article.id.to_s, class: 'btn btn-light'%>
        </div>

      </div>
    </div>
    <% end %>