<div class="col">
    <div class="jumbotron text-center">
        <h3 class="display-5">Sing Up</h3>
        <p class="lead"></p>
        <hr class="my-4">
        <ul class="list-unstyled">
            <%= form_for @user do |form| %>
            <div class="form-group">
                <%= form.label :username %>
                <%= form.text_field :username %>
            </div>
            <li>
                <%= form.label :avatar %>
                <%= form.file_field :avatar %>
            </li>
            <li>
                <%= form.label :password %>
                <%= form.password_field :password %>
            </li>
            <li class="mt-2">
                <%= form.submit class: "btn btn-success"%>
                <%= link_to "Login", '/login', method: :get, class: "btn btn-primary"%>
                <% end %>
            </li>
            <ul>
    </div>
</div>