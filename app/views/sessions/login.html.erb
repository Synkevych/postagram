<!-- Log In --->
<div class="col">
  <div class="jumbotron text-center">

    <h3 class="display-5">Log In</h3>

    <ul class="list-unstyled">

      <%= form_tag '/login' do%>
      <li>
        <%= label_tag :username %><br>
        <%= text_field_tag :username%><br> </li>
      <li>

        <%= label_tag :password %>
        <%= link_to "forgot password", new_password_reset_path %><br>
        <%= password_field_tag :password %><br></li>

      <li class="mt-2">
        <%= submit_tag "Login",  class: "btn btn-success"%>
        <%= link_to "Sign In", '/users/new', method: :get, class: "btn btn-primary"%>
        <%end%>

      </li>
      <ul>
  </div>
</div>